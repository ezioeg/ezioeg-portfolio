---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Ezio Portfolio - Ingeniero de Sistemas"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    html {
        font-family: system-ui, sans-serif;
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        padding: 0;
        background: #f8fafc;
        min-height: 100vh;
    }

    * {
        box-sizing: border-box;
    }
</style>
