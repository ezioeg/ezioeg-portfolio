<style>
    .hero {
        padding: 8rem 2rem 4rem;
        /* max-width: 1200px; */
        margin: 0 auto;
        text-align: left;
        /* background: linear-gradient(135deg, #6366f1, #8b5cf6); */
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        max-width: 1000px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .profile-section {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .profile-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid #a3e635;
        object-fit: cover;
        box-shadow: 0 8px 25px -3px rgba(0, 0, 0, 0.2);
    }

    .availability-badge {
        background: #a3e635;
        color: #6366f1;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 600;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 800;
        color: #374151;
        margin: 0 0 1.5rem 0;
        line-height: 1.1;
    }

    .hero-description {
        max-width: 600px;
        font-size: 1.2rem;
        color: #374151;
        line-height: 1.6;
        margin: 0 0 2rem 0;
    }

    .highlight {
        color: #6366f1;
        /* font-weight: 600; */
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-start;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: #a3e635;
        color: #6366f1;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #a3e635, #84cc16);
        transform: translateY(-2px);
        box-shadow: 0 8px 15px -3px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary {
        background: transparent;
        color: #6366f1;
        border: 2px solid #6366f1;
    }

    .btn-secondary:hover {
        background: white;
        color: #6366f1;
        transform: translateY(-2px);
    }

    /* Decorative Elements */
    .decorative-mobile {
        position: absolute;
        top: 15%;
        right: 8%;
        z-index: 1;
        opacity: 0.6;
        animation: float 6s ease-in-out infinite;
    }

    .decorative-laptop {
        position: absolute;
        bottom: 20%;
        right: 12%;
        z-index: 1;
        opacity: 0.5;
        animation: float 8s ease-in-out infinite reverse;
    }

    .decorative-code {
        position: absolute;
        top: 40%;
        right: 2%;
        z-index: 1;
        opacity: 0.4;
        animation: float 7s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    @media (max-width: 768px) {
        .hero {
            padding: 6rem 1rem 3rem;
            text-align: center;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-description {
            font-size: 1.1rem;
        }

        .hero-actions {
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .profile-section {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }

        .decorative-mobile,
        .decorative-laptop,
        .decorative-code {
            display: none;
        }
    }
</style>
