<style>
    .about {
        padding: 5rem 2rem;
        background: #f8fafc;
        position: relative;
        overflow: hidden;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 2rem;
        font-weight: 700;
        color: #374151;
        margin-bottom: 3rem;
    }

    .about-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 4rem;
        /* align-items: center; */
    }

    .about-text {
        font-size: 1.1rem;
        line-height: 1.7;
        color: #374151;
    }

    .about-paragraph {
        margin: 0 0 1.5rem 0;
    }

    .about-paragraph:last-child {
        margin-bottom: 0;
    }

    .highlight {
        color: #6366f1;
        font-weight: 600;
        background: #6366f1;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .about-image {
        display: flex;
        justify-content: center;
    }

    .image-container {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        transform: rotate(-2deg);
        transition: transform 0.3s ease;
        box-shadow: 0 15px 35px -3px rgba(99, 102, 241, 0.2);
        border: 4px solid #a3e635;
    }

    .image-container:hover {
        transform: rotate(0deg) scale(1.05);
    }

    .profile-photo {
        width: 300px;
        height: 400px;
        object-fit: cover;
        display: block;
    }

    /* Decorative Elements */
    .decorative-ide {
        position: absolute;
        top: 10%;
        right: 3%;
        z-index: 1;
        opacity: 0.6;
        animation: float 12s ease-in-out infinite;
    }

    .decorative-git {
        position: absolute;
        bottom: 20%;
        right: 10%;
        z-index: 1;
        opacity: 0.7;
        animation: float 8s ease-in-out infinite reverse;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-8px) rotate(1deg);
        }
    }

    @media (max-width: 768px) {
        .about {
            padding: 3rem 1rem;
        }

        .about-content {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
        }

        .about-text {
            font-size: 1rem;
        }

        .section-title {
            font-size: 1.75rem;
        }

        .image-container {
            transform: rotate(0deg);
        }

        .profile-photo {
            width: 250px;
            height: 320px;
        }

        .decorative-ide,
        .decorative-git {
            display: none;
        }
    }
</style>
