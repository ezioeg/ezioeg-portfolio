</section>

<style>
    .experience {
        padding: 3rem 2rem;
        background: #f8fafc;
        position: relative;
        overflow: hidden;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 2rem;
        font-weight: 700;
        color: #374151;
        margin-bottom: 3rem;
    }

    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: "";
        position: absolute;
        left: 0.75rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #e2e8f0;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 3rem;
        background: white;
        border-radius: 12px;
        padding: 2rem;
        margin-left: 1.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .timeline-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px -3px rgba(99, 102, 241, 0.15);
    }

    .timeline-marker {
        position: absolute;
        left: -3.25rem;
        top: 2rem;
        width: 1rem;
        height: 1rem;
        background: #a3e635;
        border-radius: 50%;
        border: 3px solid white;
        box-shadow: 0 0 0 3px #a3e635;
    }

    .job-header {
        margin-bottom: 1rem;
    }

    .job-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #6366f1;
        margin: 0 0 0.5rem 0;
    }

    .company {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.25rem;
    }

    .period {
        font-size: 0.9rem;
        color: #6b7280;
    }

    .job-description {
        color: #374151;
        line-height: 1.6;
        margin: 1rem 0 1.5rem 0;
    }

    .learn-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: none;
        border: none;
        color: #6366f1;
        font-weight: 500;
        cursor: pointer;
        padding: 0;
        transition: all 0.3s ease;
    }

    .learn-more:hover {
        gap: 0.75rem;
        background: linear-gradient(135deg, #6366f1, #a3e635);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Decorative Elements */
    .decorative-browser {
        position: absolute;
        top: 15%;
        right: 5%;
        z-index: 1;
        opacity: 0.7;
        animation: float 8s ease-in-out infinite;
    }

    .decorative-components {
        position: absolute;
        bottom: 15%;
        right: 8%;
        z-index: 1;
        opacity: 0.6;
        animation: float 10s ease-in-out infinite reverse;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-8px) rotate(2deg);
        }
    }

    @media (max-width: 768px) {
        .experience {
            padding: 3rem 1rem;
        }

        .timeline {
            padding-left: 1rem;
        }

        .timeline-item {
            margin-left: 1rem;
            padding: 1.5rem;
        }

        .timeline-marker {
            left: -2.25rem;
        }

        .section-title {
            font-size: 1.75rem;
        }

        .decorative-browser,
        .decorative-components {
            display: none;
        }
    }
</style>
